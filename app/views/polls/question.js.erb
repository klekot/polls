var seconds = gon.seconds;
var penalty = gon.penalty;
var form = '<%= render partial: 'shared/question', locals: {counter: @counter} if @counter <= @questions_quantity %>';

$("#poll-container").empty();
$("#poll-container").append(form);

<% unless @correct %>
  var time = ($('.countdown-amount').text());
  $('.time').countdown('destroy');
  $('.time').countdown({until: +(time-penalty), format: 'S'});
<% else %>
  $('.time').countdown({until: +(seconds), format: 'S'});
<% end %>

<% if @counter > @questions_quantity %>
  window.location = "/resume";
<% end %>
